<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Squad | Pursuit7 Gaming</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/favicon.ico">
</head>
<body>
  <%- include('partials/header') %>

  <section class="rosters-section">
    <h2>Squad</h2>
    <div class="roster-grid">
      <% if (players && players.length > 0) { %>
        <% players.forEach(player => { %>
          <div class="member-card">
            <img src="<%= player.imageUrl || 'https://placehold.co/100x100/111/a875ff?text=+' %>" alt="<%= player.name %>">
            <h4><%= player.name %></h4>
            <p><%= player.role %></p>
          </div>
        <% }); %>
      <% } else { %>
        <p class="empty-state">No active players.</p>
      <% } %>
    </div>

    <h2>Command Staff</h2>
    <div class="roster-grid">
      <% if (staff && staff.length > 0) { %>
        <% staff.forEach(staffMember => { %>
          <div class="member-card">
            <img src="<%= staffMember.imageUrl || 'https://placehold.co/100x100/111/a875ff?text=+' %>" alt="<%= staffMember.name %>">
            <h4><%= staffMember.name %></h4>
            <p><%= staffMember.role %></p>
          </div>
        <% }); %>
      <% } else { %>
        <p class="empty-state">No command staff listed.</p>
      <% } %>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
</html>
